<html>
  <head>
    <title>Hello, Operator?</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
    <%= stylesheet_link_tag 'operator' %>
    <script src="http://www.google.com/jsapi" type="text/javascript"></script>
    <script type="text/javascript">
      <%- extras = RAILS_ENV == "development" ? "{ uncompressed: true }": "{}" -%>
      google.load("jquery", "1.3.2", <%= extras %>);
    </script>
    <%= javascript_include_tag 'application', 'audio-player' %>
    <script type="text/javascript"> 
      AudioPlayer.setup("/flash/player.swf", {
        width: 290
      });
    </script>
    <%= yield :head %>
  </head>
  <body id='<%= controller.controller_name %>'>
    <%= yield %>
  </body>
</html>